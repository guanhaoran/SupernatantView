<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="supernatant.com.myapplication.MainActivity">


    <TextView
        android:background="#ffff00"
        android:layout_width="80dp"
        android:layout_centerVertical="true"
        android:id="@+id/btn_click"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp" />

    <TextView
        android:background="#ffff00"
        android:layout_width="80dp"
        android:id="@+id/btn_click1"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_click"
        android:layout_toRightOf="@+id/btn_click"
        android:layout_toEndOf="@+id/btn_click"
        android:layout_marginTop="101dp" />

    <TextView
        android:background="#ffff00"
        android:layout_width="80dp"
        android:id="@+id/btn_click2"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/btn_click"
        android:layout_toStartOf="@+id/btn_click"
        android:layout_marginTop="78dp" />
</RelativeLayout>
